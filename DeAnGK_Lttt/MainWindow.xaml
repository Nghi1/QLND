<Window x:Class="DeAnGK_Lttt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeAnGK_Lttt"
        mc:Ignorable="d"
        Title="Begin" Height="450" Width="800" Background="AntiqueWhite">
    <StackPanel>
        <TextBlock Text="CHƯƠNG TRÌNH ĐĂNG KÝ LÀM VIỆC NGOÀI GIỜ" FontSize="25" FontWeight="Bold" Margin="100 150 0 0"></TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Đăng Ký Lịch Làm Việc" Padding="50" Margin="10 0 10 0" Background="Pink" Click="Button_Click_2"></Button>
            <Button Grid.Column="1" Content="Quản Lý Tài Khoản" Padding="50" Margin="10 0 10 0" Background="Pink" Click="Button_Click_1"></Button>
            <Button Grid.Column="2" Content="Đăng Ký Tài Khoản" Padding="50" Margin="10 0 10 0" Background="LightPink" Click="Button_Click"></Button>
        </Grid>
    </StackPanel>
</Window>
